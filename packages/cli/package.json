{
  "name": "@yotpoltd/cadr-cli",
  "version": "0.0.1",
  "description": "Continuous Architectural Decision Records - Automatically capture ADRs as you code",
  "main": "dist/index.js",
  "bin": {
    "cadr": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && npm run postbuild",
    "postbuild": "if [ -f dist/index.js ]; then if ! head -1 dist/index.js | grep -q '^#!/usr/bin/env node$'; then echo '#!/usr/bin/env node' | cat - dist/index.js > dist/index.tmp && mv dist/index.tmp dist/index.js; fi; chmod +x dist/index.js; fi",
    "test": "jest"
  },
  "keywords": [
    "adr",
    "architecture",
    "cli",
    "decision-records",
    "documentation"
  ],
  "author": "Yotpo Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YotpoLtd/cADR.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "pino": "^8.17.2",
    "openai": "^4.0.0",
    "@google/generative-ai": "^0.21.0",
    "js-yaml": "^4.1.0",
    "yup": "^1.0.0",
    "commander": "^11.0.0",
    "ink": "^5.0.1",
    "react": "^18.3.1",
    "ink-spinner": "^5.0.0"
  },
  "devDependencies": {
    "ink-testing-library": "^4.0.0",
    "@types/react": "^18.3.0",
    "typescript": "^5.0.0",
    "@types/jest": "^29.0.0",
    "@types/js-yaml": "^4.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0"
  }
}
